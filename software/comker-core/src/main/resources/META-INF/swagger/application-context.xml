<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:cxf="http://cxf.apache.org/core"
  xmlns:jaxrs="http://cxf.apache.org/jaxrs"
  xmlns:util="http://www.springframework.org/schema/util"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="
        http://cxf.apache.org/core
        http://cxf.apache.org/schemas/core.xsd
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-2.5.xsd
        http://cxf.apache.org/jaxrs
        http://cxf.apache.org/schemas/jaxrs.xsd
        http://www.springframework.org/schema/util
        http://www.springframework.org/schema/util/spring-util-2.0.xsd">

  <import resource="classpath:META-INF/cxf/cxf.xml" />

  <context:component-scan base-package="net.cokkee.comker" />

  <!-- Swagger API listing resource -->
  <bean id="swaggerResourceJSON" class="com.wordnik.swagger.jaxrs.listing.ApiListingResourceJSON" />
  
  <!-- Swagger writers -->
  <bean id="swaggerApiWriter" class="com.wordnik.swagger.jaxrs.listing.ApiDeclarationProvider" />
  <bean id="swaggerResourceWriter" class="com.wordnik.swagger.jaxrs.listing.ResourceListingProvider" />

  <!-- JSON mapper -->
  <bean id="swaggerJsonProvider"
      class="net.cokkee.comker.util.ComkerJacksonJaxbJsonProvider" />

  <!-- Exception mapper -->
  <bean id="swaggerExceptionMapper"
      class="net.cokkee.comker.api.ComkerExceptionMapper" />

  <!-- this scans the classes for resources -->
  <bean id="swaggerConfig" class="com.wordnik.swagger.jaxrs.config.BeanConfig">
    <property name="resourcePackage" value="net.cokkee.comker.api" />
    <property name="version" value="1.0.0" />
    <property name="basePath" value="http://localhost:8080/comker-app/ws/comker/api" />
    <property name="title" value="Comker Core Module" />
    <property name="description" value="Comker Core module provides System and Administration."/>
    <property name="scan" value="true" />
  </bean>

  <bean class="org.apache.cxf.jaxrs.JAXRSServerFactoryBean" init-method="create">
        <property name="address" value="/api" />
        <property name="serviceBeans">
            <list>
                <ref bean="comkerQuestionResource" />
                <ref bean="swaggerResourceJSON" />
            </list>
        </property>
        <property name="providers">
            <list>
                <ref bean="swaggerJsonProvider" />
                <ref bean="swaggerExceptionMapper" />
                <ref bean="swaggerResourceWriter" />
                <ref bean="swaggerApiWriter" />
            </list>
        </property>
  </bean>

  <cxf:bus>
    <cxf:features>
      <cxf:logging />
    </cxf:features>
  </cxf:bus>

</beans>
