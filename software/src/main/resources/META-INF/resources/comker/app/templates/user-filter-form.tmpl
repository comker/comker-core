    <div>
        <div class="control-group">
            <label class="control-label" for="title">Title:</label>
            <div class="controls">
                <input type="text" id="title" placeholder="Title" class="input-xlarge"/>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="author">Author:</label>
            <div class="controls">
                <input type="text" id="author" placeholder="Author" class="input-large"/>
            </div>
        </div>
        <ul>
            <li><button id="submit-filter-form" class="btn btn-primary">Filter</button></li>
            <li><button id="cancel-filter-user" class="btn btn-primary">Cancel</button></li>
        </ul>
    </div>
