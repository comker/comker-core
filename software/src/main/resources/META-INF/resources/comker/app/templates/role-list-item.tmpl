<div class="role-container">
    <div class="role-overview">
        <ul>
            <li><span class="item-label" data-i18n="role:role.form.name">Name</span>: <%= name %></li>
            <li><span class="item-label" data-i18n="role:role.form.code">Code</span>: <%= code %></li>
            <li><span class="item-label" data-i18n="role:role.form.description">Description</span>: <%= description %></li>
        </ul>
        <button class="role-button delete btn btn-danger btn-small" data-i18n="common:button.delete.label">Delete</button>
        <button class="role-button update btn btn-info btn-small" data-i18n="common:button.update.label">Update</button>
        <button class="role-button detail btn btn-info btn-small" data-i18n="common:button.detail.label">Detail</button>
    </div>
    <div class="role-dialog">
        <div class="role-message"></div>
        <div class="role-content"></div>
    </div>
</div>