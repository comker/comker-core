<form action="#" id="formCreateUser" class="form-horizontal user-x-form">
    <div>
        <div class="control-group">
            <label class="control-label" for="fullname" data-i18n="user:user.form.fullname">Fullname:</label>
            <div class="controls">
                <input type="text" id="fullname" placeholder="Fullname" class="input-xlarge"/>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="email" data-i18n="user:user.form.email">Email:</label>
            <div class="controls">
                <input type="text" id="email" placeholder="Email" class="input-large"/>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="username" data-i18n="user:user.form.username">Username:</label>
            <div class="controls">
                <input type="text" id="username" placeholder="Username" class="input-large"/>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="password" data-i18n="user:user.form.password">Password:</label>
            <div class="controls">
                <input type="password" id="password" class="input-small"/>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="retypedPassword" data-i18n="user:user.form.retypedPassword">Retype password:</label>
            <div class="controls">
                <input type="password" id="retypedPassword" class="input-small"/>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="comment" data-i18n="user:user.form.comment">Comment:</label>
            <div class="controls">
                <input type="text" id="comment" placeholder="Comment" class="input-xxlarge"/>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="avatarImage" data-i18n="user:user.form.avatarImage">Avatar:</label>
            <div class="controls">
                <input type="file" id="avatarImage" class="input-large"/>
            </div>
        </div>
        <ul>
            <li><button id="submit-create-user" class="btn btn-primary" data-i18n="common:button.add.label">Add</button></li>
            <li><button id="cancel-create-user" class="btn btn-primary" data-i18n="common:button.cancel.label">Cancel</button></li>
        </ul>
    </div>
</form>