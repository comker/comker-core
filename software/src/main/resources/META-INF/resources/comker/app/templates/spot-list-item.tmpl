<div class="spot-container">
    <div class="spot-overview">
        <ul>
            <li><span class="item-label" data-i18n="spot:spot.form.name">Name</span>: <%= name %></li>
            <li><span class="item-label" data-i18n="spot:spot.form.code">Code</span>: <%= code %></li>
            <li><span class="item-label" data-i18n="spot:spot.form.description">Description</span>: <%= description %></li>
        </ul>
        <button class="spot-button delete btn btn-danger btn-small" data-i18n="common:button.delete.label">Delete</button>
        <button class="spot-button update btn btn-info btn-small" data-i18n="common:button.update.label">Update</button>
        <button class="spot-button detail btn btn-info btn-small" data-i18n="common:button.detail.label">Detail</button>
    </div>
    <div class="spot-dialog">
        <div class="spot-message"></div>
        <div class="spot-content"></div>
    </div>
</div>