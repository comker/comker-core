<form action="#" id="formCreateRole" class="form-horizontal role-x-form">
    <div>
        <div class="control-group">
            <label class="control-label" for="name" data-i18n="role:role.form.name">Name:</label>
            <div class="controls">
                <input type="text" id="name" placeholder="name" class="input-large"/>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="code" data-i18n="role:role.form.code">Code:</label>
            <div class="controls">
                <input type="text" id="code" placeholder="Code" class="input-large"/>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="description" data-i18n="role:role.form.description">Description:</label>
            <div class="controls">
                <input type="text" id="description" placeholder="Description" class="input-xxlarge"/>
            </div>
        </div>
        <ul>
            <li><button id="submit-create-role" class="btn btn-primary" data-i18n="common:button.create.submit.label">Add</button></li>
            <li><button id="cancel-create-role" class="btn btn-primary" data-i18n="common:button.create.cancel.label">Cancel</button></li>
        </ul>
    </div>
</form>