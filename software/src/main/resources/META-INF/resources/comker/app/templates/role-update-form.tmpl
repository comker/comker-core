<form action="#" id="formUpdateRole" class="form-horizontal role-x-form">
    <div>
        <div class="control-group">
            <label class="control-label" for="name" data-i18n="role:role.form.name">Name:</label>
            <div class="controls">
                <input type="text" id="name" class="input-large" value="<%=name%>"/>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="code" data-i18n="role:role.form.code">Code:</label>
            <div class="controls">
                <input type="text" id="code" class="input-large" value="<%=code%>"/>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="description" data-i18n="role:role.form.description">Description:</label>
            <div class="controls">
                <input type="text" id="description" class="input-xxlarge" value="<%=description%>"/>
            </div>
        </div>
        <ul>
            <li><button id="submit-update-role" class="btn btn-primary" data-i18n="common:button.update.submit.label">Save</button></li>
            <li><button id="cancel-update-role" class="btn btn-primary" data-i18n="common:button.update.cancel.label">Cancel</button></li>
        </ul>
    </div>
</form>