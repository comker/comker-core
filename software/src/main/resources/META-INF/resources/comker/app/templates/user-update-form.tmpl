<form action="#" id="updateUser" class="form-horizontal user-x-form">
    <div>
        <div class="control-group">
            <label class="control-label" for="fullname" data-i18n="user:user.form.fullname">Fullname:</label>
            <div class="controls">
                <input type="text" id="fullname" class="input-xlarge" value="<%=fullname%>"/>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="email" data-i18n="user:user.form.email">Email:</label>
            <div class="controls">
                <input type="text" id="email" class="input-large" value="<%=email%>"/>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="username" data-i18n="user:user.form.username">Username:</label>
            <div class="controls">
                <input type="text" id="username" class="input-large" value="<%=username%>"/>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="password" data-i18n="user:user.form.password">Password:</label>
            <div class="controls">
                <input type="password" id="password" class="input-small"/>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="retypedPassword" data-i18n="user:user.form.retypedPassword">Retyped Password:</label>
            <div class="controls">
                <input type="text" id="retypedPassword" class="input-small"/>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="coverImage" data-i18n="user:user.form.avatarImage">Cover Image:</label>
            <div class="controls">
                <input type="file" id="coverImage" placeholder="CoverImage" class="input-large"/>
            </div>
        </div>
        <ul>
            <li><button id="submit-update-user" class="btn btn-primary" data-i18n="common:button.save.label">Save</button></li>
            <li><button id="cancel-update-user" class="btn btn-primary" data-i18n="common:button.cancel.label">Cancel</button></li>
        </ul>
    </div>
</form>