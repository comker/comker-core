<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
            http://www.springframework.org/schema/beans 
            http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="comkerAuthResource"
            class="net.cokkee.comker.api.impl.ComkerAuthResourceImpl">
        <property name="securityService" ref="comkerSecurityService" />
        <property name="sessionService" ref="comkerSessionService" />
    </bean>

    <bean id="comkerUserResource"
            class="net.cokkee.comker.api.impl.ComkerUserResourceImpl">
        <property name="sessionService" ref="comkerSessionService" />
        <property name="userStorage" ref="comkerUserStorage" />
    </bean>

    <bean id="comkerCrewResource"
            class="net.cokkee.comker.api.impl.ComkerCrewResourceImpl">
        <property name="sessionService" ref="comkerSessionService" />
        <property name="crewStorage" ref="comkerCrewStorage" />
    </bean>

    <bean id="comkerSpotResource"
            class="net.cokkee.comker.api.impl.ComkerSpotResourceImpl">
        <property name="sessionService" ref="comkerSessionService" />
        <property name="spotStorage" ref="comkerSpotStorage" />
    </bean>

    <bean id="comkerRoleResource"
            class="net.cokkee.comker.api.impl.ComkerRoleResourceImpl">
        <property name="sessionService" ref="comkerSessionService" />
        <property name="roleStorage" ref="comkerRoleStorage" />
    </bean>

    <bean id="comkerPermissionResource"
            class="net.cokkee.comker.api.impl.ComkerPermissionResourceImpl">
        <property name="sessionService" ref="comkerSessionService" />
        <property name="permissionStorage" ref="comkerPermissionStorage" />
    </bean>

    <bean id="comkerNavbarResource"
            class="net.cokkee.comker.api.impl.ComkerNavbarResourceImpl">
        <property name="sessionService" ref="comkerSessionService" />
        <property name="navbarStorage" ref="comkerNavbarStorage" />
    </bean>

    <bean id="comkerSessionResource"
            class="net.cokkee.comker.api.impl.ComkerSessionResourceImpl">
        <property name="securityService" ref="comkerSecurityService" />
        <property name="sessionService" ref="comkerSessionService" />
    </bean>

    <bean id="comkerWatchdogResource"
            class="net.cokkee.comker.api.impl.ComkerWatchdogResourceImpl">
        <property name="sessionService" ref="comkerSessionService" />
        <property name="watchdogStorage" ref="comkerWatchdogStorage" />
    </bean>

</beans>
