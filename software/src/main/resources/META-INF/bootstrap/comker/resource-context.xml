<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
            http://www.springframework.org/schema/beans 
            http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="comkerAuthResource"
            class="net.cokkee.comker.api.ComkerAuthResource">
        <property name="sessionService" ref="comkerSessionService" />
    </bean>

    <bean id="comkerUserResource"
            class="net.cokkee.comker.api.ComkerUserResource">
        <property name="sessionService" ref="comkerSessionService" />
        <property name="userDao" ref="comkerUserDao" />
    </bean>

    <bean id="comkerCrewResource"
            class="net.cokkee.comker.api.ComkerCrewResource">
        <property name="sessionService" ref="comkerSessionService" />
        <property name="crewDao" ref="comkerCrewDao" />
    </bean>

    <bean id="comkerSpotResource"
            class="net.cokkee.comker.api.ComkerSpotResource">
        <property name="sessionService" ref="comkerSessionService" />
        <property name="spotDao" ref="comkerSpotDao" />
    </bean>

    <bean id="comkerRoleResource"
            class="net.cokkee.comker.api.ComkerRoleResource">
        <property name="sessionService" ref="comkerSessionService" />
        <property name="roleDao" ref="comkerRoleDao" />
    </bean>

    <bean id="comkerPermissionResource"
            class="net.cokkee.comker.api.ComkerPermissionResource">
        <property name="sessionService" ref="comkerSessionService" />
        <property name="permissionDao" ref="comkerPermissionDao" />
    </bean>

    <bean id="comkerQuestionResource"
            class="net.cokkee.comker.api.ComkerQuestionResource">
        <property name="storageManager" ref="comkerStorageManager" />
    </bean>

    <bean id="comkerStorageManager"
            class="net.cokkee.comker.service.impl.ComkerStorageManagerImpl" />

</beans>
